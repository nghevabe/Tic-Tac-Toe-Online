<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WaitingRoom">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">




    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvPlayer1"
            android:text="LinhTran"

            android:textSize="30dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tvWin"
            android:text="Win: 5"

            android:textSize="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvLose"
            android:text="Lose: 5"

            android:textSize="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvDraw"
            android:text="Draw: 5"

            android:textSize="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvStatus"
            android:text="Ready"
            android:textColor="@color/colorAccent"
            android:textSize="25dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>



        <LinearLayout
            android:layout_marginLeft="60dp"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvPlayer2"
                android:text="Nghevabe"

                android:textSize="30dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tvWin2"
                android:text="Win: 5"

                android:textSize="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvLose2"
                android:text="Lose: 5"

                android:textSize="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvDraw2"
                android:text="Draw: 5"

                android:textSize="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvStatus2"
                android:text="Ready"
                android:textColor="@color/colorAccent"
                android:textSize="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/buttonReady"
            android:text="Ready"
            android:textColor="@color/colorPrimary"

            android:layout_marginLeft="30dp"
            android:layout_width="150dp"
            android:layout_height="60dp" />

        <Button
            android:id="@+id/buttonLeave"
            android:text="Leave"
            android:textColor="@color/colorAccent"
            android:layout_marginLeft="30dp"
            android:layout_width="150dp"
            android:layout_height="60dp" />

    </LinearLayout>



</LinearLayout>